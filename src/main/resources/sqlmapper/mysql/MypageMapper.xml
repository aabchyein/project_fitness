<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="Mypage">
    <!-- 회원 상세정보 -->
    <select id="MypageDetail" parameterType="Map" resultType="Map">   
        SELECT * 
        FROM member_information
        where ID = #{ID};
    </select>

    <!-- 회원 예약정보 -->
    <select id="ReserveList" parameterType="Map" resultType="Map">   
    SELECT *
    FROM reservation
    WHERE ID = #{ID};
    </select>

    <update id="MypageUpdate" parameterType="Map">
    update reservation
    set reservation_date = '2023-12-34',
        reservation_time = '12:34-56:78',
        notes = 'hello'
    where reservation_id = 'reser07'
    ;
    </update>

    
    
    <delete id="MypageDelete" parameterType="Map">
    delete
    from reservation
    where reservation_id = 'reser07';
    </delete>

</mapper>